<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="horizontal">

    <ImageView
        android:scaleType="fitCenter"
        android:id="@+id/item_image_imageView"
        android:src="@mipmap/ic_launcher"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <LinearLayout
        android:layout_marginStart="25dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_temp_ImageView"
            android:scaleType="fitCenter"
            android:src="@drawable/ice_icon"
            android:layout_width="80dp"
            android:layout_height="35dp"/>

        <TextView
            android:id="@+id/item_name_textView"
            android:text="메뉴명"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_price_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격 : "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/item_option_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="옵션 : "
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/item_minus_Button"
        android:layout_gravity="center"
        android:background="@drawable/minus_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/item_count_TextView"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/item_add_Button"
        android:layout_gravity="center"
        android:background="@drawable/plus_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <Button
        android:id="@+id/itme_delete_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="45dp"
        android:backgroundTint="#FF3D3D"
        android:text="삭제"
        android:textColor="@color/white" />

</LinearLayout>