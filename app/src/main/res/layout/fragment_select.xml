<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".pay_Fragment.SelectFragment">

    <TextView
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:text="결제 방법 선택"
        android:textColor="#FFBB33"
        android:textSize="30dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:text="결제 방식을 선택해 주세요"
        android:textSize="22dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="10dp"
            android:padding="10dp"
            android:drawableTop="@drawable/pay_icon"
            android:background="@drawable/round_border"
            android:id="@+id/pay_card_Button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="카드결제"/>

        <Button
            android:id="@+id/pay_nfc_Button"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:drawableTop="@drawable/nfc_icon"
            android:background="@drawable/round_border"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="NFC결제"/>

    </LinearLayout>

</LinearLayout>